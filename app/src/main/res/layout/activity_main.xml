        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/botaoJogarId"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="73dp" />

